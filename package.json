{
  "private": true,
  "name": "1fit-monorepo",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "utils": "packages/utils"
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "=4",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "lint-staged": {
    "*.{json,md,css,html}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx,js}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.js": "eslint --cache --fix"
  }
}
